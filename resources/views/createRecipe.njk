{% extends 'layout' %}

{% block scripts %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/1000hz-bootstrap-validator/0.11.5/validator.min.js"></script>
{% endblock %}

{% block content %}

<h2>Új recept felvitele</h2>

{% if old('errors') %}
<div class="panel panel-danger">
  <div class="panel-heading">
    <h3 class="panel-title">Hibalista</h3>
  </div>
  <div class="panel-body">
    <ul>
      {% for error in old('errors') %}
      <li>{{ error.message }}</li>
      {% endfor %}
    </ul>
  </div>
</div>
{% endif %}

<form class="form-horizontal" action="" method="post"
  data-toggle="validator"
>

  {{ csrfField }}

  <div class="form-group has-feedback">
    <label for="name" class="col-lg-2 control-label">Recept neve</label>
    <div class="col-lg-10">
      <input required type="text" class="form-control" id="name" name="name" placeholder="Recept neve"
        value="{{ old('name') }}">
      <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
      <div class="help-block with-errors"></div>
    </div>
  </div>
  <div class="form-group has-feedback">
    <label for="ingredients" class="col-lg-2 control-label">Hozzávalók</label>
    <div class="col-lg-10">
      <textarea required class="form-control" rows="3" id="ingredients" name="ingredients">{{ old('ingredients') }}</textarea>
      <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
      <div class="help-block with-errors"></div>
    </div>
  </div>
  <div class="form-group has-feedback">
    <label for="instructions" class="col-lg-2 control-label">Leírás</label>
    <div class="col-lg-10">
      <textarea required class="form-control" rows="3" id="instructions" name="instructions">{{ old('instructions') }}</textarea>
      <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
      <div class="help-block with-errors"></div>
    </div>
  </div>
  <div class="form-group has-feedback">
    <label for="category_id" class="col-lg-2 control-label">Kategória</label>
    <div class="col-lg-10">
      <select class="form-control" id="category_id" name="category_id">
        {% for category in categories %}
        <option value="{{ category.id }}"
          {% if category.id == old('category_id') %}
          selected
          {% endif %}
        >
          {{ category.name }}
        </option>
        {% endfor %}
      </select>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <button type="reset" class="btn btn-default">Cancel</button>
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </div>
</form>

{% endblock %}